      <form class="form-group" action="/" method="post">
        <label for=""> Please add Item Name </label>
        <input type="text" class="form-control" name="item" value="" required><br>

          <label for=""> Please add rating</label>
          <select class="form-control" name="rating">
            <option value="1">1</option>
              <option value="2">2</option>
                <option value="3">3</option>
                  <option value="4">4</option>
                    <option value="5">5</option>

          </select>
           <br>

          <label for=""> Please add reviews</label>
          <input type="text" class="form-control" name="reviews" value="" required> <br>
          <button type="submit" name="button" class="btn btn-primary"> Add</button>

      </form>

    </div>

  </body>
